<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="20dp"
    android:padding="25dp"
    app:cardBackgroundColor="#70099AF1"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province"
                android:padding="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DProvince"
                    android:text="Uva"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DStreet"
                android:text="Wihara Road"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"/>










        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:padding="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DCity"
                    android:text="Dambagalla"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Phone Number :"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="0714609276"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnDEdit"
                android:background="#D6DEE6"
                android:text="Edit"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="50dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#E8035DC3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnDDelete"
                android:background="#D6DEE6"
                android:text="Delete"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#E8035DC3" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DeSuccess"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="100dp"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:backgroundTint="#0712F4" />







            </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>
















