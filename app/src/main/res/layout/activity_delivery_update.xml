<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".DeliveryUpdate">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#A40C3ADF"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Address"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:textStyle="bold"
                android:gravity="center_horizontal">

            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etProvince">

            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etStreet">

            </EditText>

            <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:id="@+id/etCity">

            </EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPhone">

            </EditText>

            <Button
                android:id="@+id/btnUConfirm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:backgroundTint="#0422F8">


            </Button>

            <Button
                android:id="@+id/btnUContinue"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#0A23DC" >

            </Button>






        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>